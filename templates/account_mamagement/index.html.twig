{% extends 'base.html.twig' %}

{% block body %}
<main style="min-height: calc(100vh - 116px - 56px - 246px);">
<br>
    <div id="main">
                <div class="container">
                    <h3>Manager Account</h3> <a href="{{path('addaccountadmin')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="container mb-3">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">ROLE</th>
                            <th scope="col">CustomerName</th>
                            <th scope="col">Gender</th>
                            <th scope="col">BirthDay</th>
                            <th scope="col">Telephone</th>
                            <th scope="col">Address</th>
                            <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in account %}
                                <tr>
                                    <td>{{c.id}}</td>
                                    <td>{{c.username}}</td>
                                    <td>
                                    {% for row in c.role %}
                                        {{row}}
                                    {% endfor %}
                                    </td>
                                    {# <td>{{(c.role)|json_encode }}</td> #}
                                    <td>{{c.Fullname}}</td>
                                    <td>{{c.Gender}}</td>
                                    <td>{{c.Birthdate|date("m/d/Y")}}</td>
                                    <td>{{c.Telephone}}</td>          
                                    <td>{{c.Address}}</td>          
                                    <td>{{c.Email}}</td>          
                                </tr>     
                                {% endfor %}                        
                        </tbody>
                    </table>
             </div>
            </div>
    </div>
    </main>
{% endblock %}
